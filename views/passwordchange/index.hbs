    <div class="body">

        <form action="/dbchangepass" method="post">

            <div class="form">




                <div class="addService" id="socialMedia" style="height: fit-content;">


                    <div class="basicInfo">
                        <caption>
                            <h2>Password</h2>
                        </caption>
                        <div class="serviceInt">

                            Change Password...
                            
                        </div>
                        <section>


<div style="color: red;">

    <span>{{{error}}}</span>
</div>
                            <div class="inp">
                                <label for="companyName">New Password</label>
                                <br>
                                <input type="password" name="password" id="" class="inputText" required>
                            </div>

                            <div class="inp">
                                <label for="companyName">Confirm Password</label>
                                <br>
                                <input type="password" name="conPassword" id="" class="inputText" required>
                            </div>

                            <input type="hidden" name="email" value="{{{requesterEmail}}}">
                            <div class="regQuiz">
                                <p style="color: grey;">If you don't have an account with us please <a href="/Register">
                                        click here </a>to register</p>
                            </div>
                        </section>


                        <div class="next" id="submit">
                            <input type="submit" value="Submit" class="btnNext">
                        </div>
                    </div>
                </div>

            </div>
        </form>
