                <div class="sub-education-menu">
                    <a href="/apps/501">Schools</a>
                    <a href="/apps/502">Tuitors</a>
                </div>
            </div>
            <div class="toolbar-sub-1" id="consultantmenu">Consult/advisor
                <div class="sub-consultant-menu">
                    <a href="/apps/601">Health</a>
                    <a href="/apps/602">Imformation Technology(IT)</a>
                    <a href="/apps/603">Law</a>
                    <a href="/apps/604">Engineering</a>
                   <a href="/apps/605">Architect&Design</a>
                    <a href="/apps/606">Others</a>
                </div>
           
            
        </div>
    </menu>
    
    <div class="body">

    
<div class="column1">



</div>
<main class="column1" id="main">

   
    <div  class="sub-column-1" id="missionSection">

        <div class="sub-column-2"  id="companyIcon">
            <img src="./../images/{{{row.BRANDICON}}}" alt="" srcset="">
        </div>

        <div  class="sub-column-2" id="mission">
        <h3 class="subTitle">Mission</h3>
        <p>{{{row.MISSION}}}</p>
    </div>

      <div  class="sub-column-2" id="quotes">
            <h3 class="subTitle">Business Email</h3>
            <p>
               {{{row.BUSINESSEMAIL}}}
            </p>
        </div>
            <div  class="sub-column-2" id="team">
                    <h3 class="subTitle">Social Media</h3>
                    <br>
                    <br>
                    <table width="76%" border="0" align="center" valign="bottom" cellspacing="0" cellpadding="0">
                        <tr>
                            {{#each social}}

                           
                        <td><a href={{{BUSINESSSOCIALMEDIALINK}}}><img src="./../images/{{{SOCIALNAME}}}.svg" alt="" style="width: 20px;"></a></td>
                          
                          {{/each}}
                          
                        </tr>
                    </table>
                </div>
        <div  class="sub-column-2" id="quotes">
            <h3 class="subTitle">Introduction</h3>
            <p>
               {{{row.SHORTINTRO}}}
            </p>
        </div>
    </div>
    <div  class="sub-column-1" id="serviceSection">

        <h2 class="subTitle">Serices/Products</h2>

        <div class="servicesCol">
            {{#each services}}
<div class="sub-column-2">
    <h3>{{{SERVICENAME}}}</h3>
    <img src="./../images/{{{SERVICEICON}}}" alt="" srcset="" >
    <p>
{{{SERVICEDESC}}}    </p>

<br>
<p style="color: white;">
<b>Ksh. {{{PRICE}}}  <button id = "addorder" onclick="handleorderbtn({{{ID}}});">+</button></b></p>
</div>

{{/each}}


        </div>
    </div>
    <div  class="sub-column-1" id="columnLocation">

        <div  class="sub-column-2" id="locationDiv">

            <h2>Location</h2>
            <h3>Physical Location</h3>
           <div id="location"> {{{row.CONTINENT}}} {{{row.COUNTRY}}} {{{row.TOWNCITY}}} <br> {{{row.ADDRESS}}}</div>

<h3>Branch Location</h3>

{{#each location}}

           <div id="location"> {{{CONTINENT}}} {{{COUNTRY}}} {{{TOWNCITY}}} <br> {{{ADDRESS}}}</div>
{{/each}}

           <h3>
               Range
           </h3>
            <div id="range">
                Within {{{row.RANGE}}}
            </div>
           

        </div>

        <div class="sub-column-2" id="ratingDiv">

            <h2>Rating</h2>

            <div id="starRate">

{{#if ratings}}
{{#each ratings}}
                <img src="./../images/star.svg" alt="" style="width: 20px;">
                {{/each}}
{{else}}

 <img src="./../images/star (1).svg" alt="" style="width: 20px;">
                <img src="./../images/star (1).svg" alt="" style="width: 20px;">
                <img src="./../images/star (1).svg" alt="" style="width: 20px;">
                <img src="./../images/star (1).svg" alt="" style="width: 20px;">
                <img src="./../images/star (1).svg" alt="" style="width: 20px;">
{{/if}}
               

                {{#if loggedUser.username}}
                <button id = "rateBtn" onclick="handleRateBtn();">Rate</button>
                {{/if}}
                <div id="ratediv">

                <img src="./../images/star (1).svg" alt="" style="width: 20px;" id="one"  class="starCheck" onclick="startClicked('one')">
                <img src="./../images/star (1).svg" alt="" style="width: 20px;" id="two" class="starCheck" onclick="startClicked('two')">
                <img src="./../images/star (1).svg" alt="" style="width: 20px;" id="three" class="starCheck" onclick="startClicked('three')">
                <img src="./../images/star (1).svg" alt="" style="width: 20px;" id="four" class="starCheck" onclick="startClicked('four')">
                <img src="./../images/star (1).svg" alt="" style="width: 20px;" id="five" class="starCheck" onclick="startClicked('five')">
<button id = "subrateBtn" onclick="handleSubRateBtn('{{{loggedUser.username}}}', '{{{row.ID}}}');"> Submit Rate</button>
                </div>
            </div>

        </div>

        <div class="sub-column-2" id="reviewsDiv">

            <h2>Reviews</h2>

            <div id="reviewsPage">
                <div class="addReview">
                    <form action="?" method="post">
                        <label for="comment">Comment</label>
                        <p>

                            <input type="text" name="comment" id="comment">

                            <input type="button" value="submit" id = "commentBtn" onclick="handlecommentbtn({{{row.ID}}}, '{{{loggedUser.username}}}', '{{{loggedUser.profileimage}}}');">
                        </p>
                    </form>
                </div>
                <div class="review" id="reviewsSection">

{{#if comments}}

{{#each comments}}
 <div class="review">
          <div class="clientDetail">

              <div class="profileImg">
                <a href="/profile/{{{USERNAME}}}">  <img src="./../images/{{{PROFILEIMAGE}}}" alt="" srcset="" height="49px" width="20px"></a>

              </div>

              <div class="profilename"> <h5>{{{USERNAME}}}</h5></div>
             
          </div>
         
          <p>{{{BUSINESSREVIEWS}}}</p>

      </div>

      {{/each}}

{{else}}

<p style="color: grey;">There are no comments...</p>
{{/if}}

                </div>
            </div>
        </div>

    </div>
</main>

<div class="column1" id="gallery">
    <h2>Galllery</h2>

    <div  id="gallerycarosol">

{{#each images}}
        <img src="./../images/{{{IMAGELINK}}}" class="imagesIng" alt="" srcset="" id="img1">
      {{/each}}
       
        <button id="imgBack">
            <
        </button>
        <button id="imgNext">
            >
        </button>
      
    </div>

</div>
<div class="column1" id="reel">
<h2>Reel</h2>
<div class="videos">
{{#each videos}}
    <iframe width="420" height="345" src="{{{BUSINESSVIDEOLINK}}}?controls=1" class="video">
    </iframe>
{{/each}}
    </div>
</div>

<div class="column1" id="order">

    <h2>Contact</h2>

<div class="form">

   


    <div class="addService" id="socialMedia"  style="height: fit-content;">


        <div class="basicInfo">
         
       <section>

        <div class="inp">
            <div class="lable" for="companyName"> Email : ?optional</div>
            <br>
            <input type="email" name="email" id="email" class="inputText" >
        </div>
    

        <div class="inp">
            <div class="lable" for="companyName"> Topic : </div>
            <br>
            <input type="text" name="topic" id="topic" class="inputText" required>
        </div>
        <div class="inp">
            <div class="lable" for="companyName">Content Body : </div>
            <br>
           <textarea name="content" id="content" cols="30" rows="10" style="width: 90%;" required></textarea>
        </div>

           </section>
      
    
        <div class="next" id="submit">
            <input type="button" value="Submit" class="btnNext" onclick="handleEmailBtn('{{{row.BUSINESSEMAIL}}}', '{{{loggedUser.email}}}', '{{{loggedUser.username}}}', '{{{loggedUser.profileimage}}}')">
        </div>
        </div>
    </div>

</div>
      

</div>

<div class="column1" id="related">
<h2>Related</h2>

<div class="relatedApp">
  
{{#each related}}
    <div class="relateddiv">
        <div class="relatedname"> {{{BUSINESSNAME}}}</div>
        <a href="/app/{{{BUSINESSNAME}}}"><img src="./../images/{{{BRANDICON}}}" alt="" srcset=""></a>
    </div>
    {{/each}}

</div>
</div>
